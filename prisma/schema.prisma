generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Installation {
  id            String   @id
  enterpriseId  String?
  teamId        String?
  botToken      String
  botId         String?
  botUserId     String?
  installerUser String?
  scope         String?
  appId         String?
  tokenType     String?  @default("bot")
  installedAt   DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([enterpriseId])
  @@index([teamId])
}